<h1>Listing orders</h1>

<table>
  <tr>
    <th>Amount</th>
    <th>Price</th>
    <th>Type</th>
    <th>Amount remain</th>
    <th>User</th>
    <th>Timestamp</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.amount %></td>
    <td><%= order.price %></td>
    <td><%= order.type %></td>
    <td><%= order.amount_remain %></td>
    <td><%= order.user_id %></td>
    <td><%= order.timestamp %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

